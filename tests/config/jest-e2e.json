{
  "preset": "ts-jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/e2e/**/*.spec.ts"],
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "maxWorkers": 1,
  "setupFilesAfterEnv": ["<rootDir>/config/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 20000,
  "verbose": false,
  "silent": true,
  "forceExit": true,
  "detectOpenHandles": false,
  "transform": {
    "^.+\\.(t|ts)$": [
      "ts-jest",
      {
        "tsconfig": {
          "skipLibCheck": true,
          "incremental": true
        },
        "transpileOnly": true
      }
    ]
  },
  "cache": true,
  "cacheDirectory": "/tmp/jest_cache",
  "clearMocks": true,
  "restoreMocks": true
}
