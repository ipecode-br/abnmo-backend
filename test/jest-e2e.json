{
  "preset": "ts-jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "maxWorkers": 1,
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 30000,
  "verbose": false,
  "silent": true,
  "transform": {
    "^.+\\.(t|ts)$": [
      "ts-jest",
      {
        "tsconfig": {
          "skipLibCheck": true,
          "incremental": true
        }
      }
    ]
  },
  "cache": true,
  "cacheDirectory": "/tmp/jest_cache"
}
